---
// src/pages/cv.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const cvData = {
  education: [
    {
      institution: "Imperial College London",
      degree: "MEng Biomedical Engineering",
      dates: "Oct 2022 – June 2026 (Expected)",
      details: [
        "Awarded Bioengineering Academic Scholarship",
        "Scored 96% (unmoderated) in Advanced Programming Module, incl. Image Processing",
        "On track for 1st Class Honours",
        // "Modules: Advanced Programming, Data Structures and Algorithms, Machine Learning, Biomedical Engineering Design, Medical Imaging, Biomechanics",
      ]
    },
    {
      institution: "Bishop's Stortford College",
      degree: "A Levels (4A* A)",
      dates: "2010 – 2022",
      details: [
        "A*: Maths, Further Maths, Physics, EPQ | A: Chemistry",
        "Academic and Music Scholarships",
        "Winner of the Physics Prize (2021)"
      ]
    }
  ],
  experience: [
  {
      company: "Advanced Biomedical Instrumentation Centre (ABIC)",
      title: "Incoming Machine Learning & Robotics Intern",
      dates: "July 2025 – Aug 2025",
      details: [
        "Incoming intern at ABIC, focusing on ML and novel bioinstrumentation R&D in biomedical engineering.",
      ]
    },
    {
      company: "Oxford Nanopore Technologies",
      title: "Software Engineering Intern",
      dates: "July 2024 – Sept 2024",
      details: [
        "Developed C++ features for Core Software, including bug fixes and unit tests.",
        "Gained exposure to ML for base-calling using PyTorch.",
        "Built 'Moonwall', a Python data aggregation and visualisation tool."
      ]
    },
    {
      company: "Thermetrix Ltd.",
      title: "Firmware Engineer Intern",
      dates: "Aug 2023 – Sept 2023",
      details: [
        "Assisted in developing a new version of a medical device.",
        "Developed hardware systems and firmware in C using Raspberry Pico."
      ]
    },
    {
      company: "Kickstart '23 Cohort",
      title: "Entrepreneurial Program Participant",
      dates: "Nov 2022 – Apr 2023",
      details: [
        "Accepted onto the Kickstart '23 Emerge Programme to develop a socio-altruistic startup.",
        "Pitched to investors and refined business model through mentorship."
      ]
    }
  ],
  projects: [
    {
      title: "Improving Stem Cell Viability in Syringe Injection",
      role: "Research Lead",
      date: "Oct 2024 – Present",
      details: [
        "Modelling fluid dynamics in stem cells and designing microfluidic chambers (MATLAB).",
        "Academic research into ML tools for cell imaging. Main writer of the report, hoping to publish further findings. Returning to the lab in June."
      ]
    },
    {
      title: "Therakey",
      role: "Project Co-Lead",
      date: "Oct 2023 – June 2024",
      details: [
        "Designed hardware circuits and firmware (C on Raspberry Pico) for an arthritis rehabilitation device."
      ]
    },
    {
      title: "PPE Redistribution App",
      role: "Solo Developer",
      date: "2020",
      details: [
        "Built a Java mobile app with Firebase Realtime Database to advertise surplus PPE during COVID-19."
      ]
    },
    {
      title: "Personal Website",
      role: "Full-Stack Developer",
      date: "2018 – 2020",
      details: [
        "Created with Django (Python) back-end and HTML/CSS front-end."
      ]
    },
    {
      title: "App Development (Squashed Orange)",
      role: "Mobile Game Developer",
      date: "2017 – 2019",
      details: [
        "Published C# Unity games on Google Play Store and Microsoft Store."
      ]
    },
    {
      title: "Extended Project Qualification",
      role: "Research Author",
      date: "2021",
      details: [
        "Dissertation titled 'Autonomous Surgical Robotics: An Overview of the Challenges and Future Areas of Development. Graded A*.'"
      ]
    }
  ],
  skills: [
    { category: "Programming Languages", items: "C++ (strong), Python (strong), Kotlin (intermediate), MATLAB (intermediate)" },
    { category: "Frameworks/Libraries", items: "PyTorch, Django, Unity Engine" },
    { category: "Hardware", items: "Microcontrollers inc. Seeed XiaoRaspberry Pico, Embedded Linux Systems" },
    { category: "Specialised Skills", items: "Image Processing/Computer Vision, CNNs, RNNs, Reinforcement Learning, Deep Learning, Fluid Mechanics, CFD, FEA" }
  ],
  certifications: [
    { name: "ABRSM Grade 8 Piano", date: "Dec 2019", result: "Merit" },
    { name: "ABRSM Grade 8 Classical Guitar", date: "Dec 2019", result: "Distinction" },
    { name: "ABRSM Grade 5 Music Theory", date: "Mar 2018", result: "Merit" },
    { name: "HSK Level II", date: "Dec 2020", score: "90.5%" }
  ],
  awards: [
    "Bioengineering Academic Scholarship, Imperial College London",
    "Physics Prize (2021), Bishop's Stortford College"
  ]
};
---

<BaseLayout title="Anish Mariathasan – CV">
  <div class="container mx-auto px-4 py-8 md:py-12">
    <!-- Top note -->
    <p class="text-center italic text-gray-400 mb-6">References available upon request</p>

    <h1 class="text-3xl md:text-4xl font-bold mb-8 text-center">Curriculum Vitae</h1>

    <!-- Download PDF Button -->
    <div class="text-center mb-10">
      <a 
        href="/files/Anish_Mariathasan_CV.pdf" 
        class="inline-flex items-center gap-2 bg-gradient-to-r from-teal-500 to-cyan-500 hover:from-teal-600 hover:to-cyan-600 text-white font-semibold py-2 px-5 rounded-lg shadow-lg transition-all duration-300 ease-in-out"
        target="_blank"
        download
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" />
        </svg>
        Download Full PDF
      </a>
    </div>

    <!-- Education -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold border-b-2 border-teal-500 pb-2 mb-4">Education</h2>
      {cvData.education.map(edu => (
        <div class="mb-4">
          <h3 class="text-xl font-bold">{edu.institution}</h3>
          <p class="text-lg text-gray-300">{edu.degree}</p>
          <p class="text-sm text-gray-400 mb-1">{edu.dates}</p>
          <ul class="list-disc list-inside text-gray-300 ml-4">
            {edu.details.map(detail => <li>{detail}</li>)}
          </ul>
        </div>
      ))}
    </section>

    <!-- Experience -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold border-b-2 border-teal-500 pb-2 mb-4">Experience</h2>
      {cvData.experience.map(exp => (
        <div class="mb-4">
          <h3 class="text-xl font-bold">{exp.company}</h3>
          <p class="text-lg text-gray-300">{exp.title}</p>
          <p class="text-sm text-gray-400 mb-1">{exp.dates}</p>
          <ul class="list-disc list-inside text-gray-300 ml-4">
            {exp.details.map(detail => <li>{detail}</li>)}
          </ul>
        </div>
      ))}
    </section>

    <!-- Projects -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold border-b-2 border-teal-500 pb-2 mb-4">Projects & Research</h2>
      {cvData.projects.map(proj => (
        <div class="mb-4">
          <h3 class="text-xl font-bold">{proj.title}</h3>
          <p class="text-lg text-gray-300">{proj.role}</p>
          <p class="text-sm text-gray-400 mb-1">{proj.date}</p>
          <ul class="list-disc list-inside text-gray-300 ml-4">
            {proj.details.map(detail => <li>{detail}</li>)}
          </ul>
        </div>
      ))}
    </section>

    <!-- Skills -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold border-b-2 border-teal-500 pb-2 mb-4">Skills & Languages</h2>
      {cvData.skills.map(skill => (
        <p class="mb-1"><strong class="font-semibold text-gray-200">{skill.category}:</strong> {skill.items}</p>
      ))}
    </section>

    <!-- Certifications -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold border-b-2 border-teal-500 pb-2 mb-4">Certifications</h2>
      <ul class="list-disc list-inside text-gray-300 ml-4">
        {cvData.certifications.map(cert => (
          <li>
            {cert.name}, {cert.date}{cert.result ? ` — ${cert.result}` : ''}{cert.score ? ` — ${cert.score}` : ''}
          </li>
        ))}
      </ul>
    </section>

    <!-- Awards -->
    <section class="mb-10">
      <h2 class="text-2xl font-semibold border-b-2 border-teal-500 pb-2 mb-4">Awards</h2>
      <ul class="list-disc list-inside text-gray-300 ml-4">
        {cvData.awards.map(award => <li>{award}</li>)}
      </ul>
    </section>
  </div>
</BaseLayout>
