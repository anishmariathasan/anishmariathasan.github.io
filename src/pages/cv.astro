    },
    {
      company: "Kickstart '23 Cohort",
      title: "Startup Accelerator Program",
      dates: "Nov 2022 – Apr 2023",
      details: [

      ]
    }
  ],
  projects: [
    {
      title: "OedaSock (Imperial HCARD Competition Winner)",
      role: "Project Lead",
      date: "Jan 2025 - Present",
      details: [
        "Led development of an innovative smart compression device for managing leg swelling (oedema).",
        "Integrated stretch sensors and pneumatic compression system with ESP32 microcontroller.",
        "Developed Android app with user authentication and biometric data tracking using Kotlin and Firestore.",
        "Placed first in the HCARD Imperial Module competition."
      ]
    },
    {
      title: "Improving Stem Cell Viability in Syringe Injection",
      role: "Research Lead",
      date: "Oct 2024 – Present",
      details: [
        "Modelling fluid dynamics in stem cells and designing microfluidic chambers (MATLAB).",
        "Academic research into ML tools for cell imaging. Main writer of the report, hoping to publish further findings. Returning to the lab in June."
      ]
    },
    {
      title: "Therakey",
      role: "Project Co-Lead",
      date: "Oct 2023 – June 2024",
      details: [
        "Designed hardware circuits and firmware (C on Raspberry Pico) for an arthritis rehabilitation device."
      ]
    }
  ],
  skills: [
    { category: "Programming Languages", items: "C++ (strong), Python (strong), Kotlin (intermediate), C (intermediate), MATLAB (intermediate)" },
    { category: "Frameworks/Libraries", items: "PyTorch, Firebase, Android SDK, Arduino/ESP32" },
    { category: "Hardware", items: "Microcontrollers (Raspberry Pico, ESP32), Embedded Systems, Circuit Design" },
    { category: "Specialised Skills", items: "Machine Learning, Computer Vision, Embedded Systems, Medical Device Development, Data Analysis" }
  ],
  certifications: [
