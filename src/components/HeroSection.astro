---
// src/components/HeroSection.astro
import AnimatedText from './AnimatedText.astro';
// import { gsap } from "gsap";
---
<section class="min-h-[70vh] flex flex-col justify-center items-center text-center relative overflow-hidden">

    <!-- <ParticleBackground /> -->

    <div class="z-10">
        <AnimatedText 
            text="hi, i'm anish" 
            className="text-4xl md:text-6xl font-bold mb-4"
        />
        <p class="text-xl md:text-2xl text-gray-400 mb-8 animate-fade-in-up delay-200"> <!-- Example simple animation class -->
            Engineering @ Imperial
        </p>
        <a href="#projects" class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-6 rounded transition duration-300 animate-fade-in-up delay-400 cursor-pointer">
            View Projects
        </a>
    </div>
</section>

<style>
/* Example simple animation keyframes (can be done with Tailwind too) */
@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
@keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in-up { animation: fadeInUp 0.6s ease-out forwards; opacity: 0; }
.animate-fade-in-down { animation: fadeInDown 0.6s ease-out forwards; opacity: 0; }
.delay-200 { animation-delay: 0.2s; }
.delay-400 { animation-delay: 0.4s; }
</style>

